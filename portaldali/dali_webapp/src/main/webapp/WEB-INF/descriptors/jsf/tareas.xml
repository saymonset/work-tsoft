<?xml version='1.0' encoding='UTF-8'?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">
	
	<!-- TAREAS BEAN -->
	<managed-bean>
		<managed-bean-name>consultaTareasBean</managed-bean-name>
		<managed-bean-class>com.indeval.portaldali.presentation.controller.tarea.ConsultaTareasBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>tareaService</property-name>
			<value>#{tareaService}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>detalleTareaBean</managed-bean-name>
		<managed-bean-class>com.indeval.portaldali.presentation.controller.tarea.DetalleTareaBean</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>tareaService</property-name>
			<value>#{tareaService}</value>
		</managed-property>
	</managed-bean>

</faces-config>