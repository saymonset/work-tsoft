  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <!--<id>jar-with-packed-dependencies</id>-->
  <id>cli</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
	  <useProjectArtifact>false</useProjectArtifact>
	  <useTransitiveDependencies>false</useTransitiveDependencies>
	  <unpack>false</unpack>
	  <scope>runtime</scope>
	  <includes>
	  	<include>
		  	com.indeval.dali:dali_webapp:war:${project.version}
	  	</include>
	  </includes>
	  <outputFileNameMapping>dali.war</outputFileNameMapping>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
	  <useProjectArtifact>false</useProjectArtifact>
	  <useTransitiveDependencies>false</useTransitiveDependencies>
	  <unpack>false</unpack>
	  <scope>runtime</scope>
	  <includes>
	  	<include>
		  	com.indeval.dali:dali_EAR:ear:${project.version}
	  	</include>
	  </includes>
	  <outputFileNameMapping>dali_services.ear</outputFileNameMapping>
    </dependencySet>
  </dependencySets>
